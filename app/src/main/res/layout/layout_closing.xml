<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:tileMode="repeat" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:background="@mipmap/but_bg"
        android:padding="15dp">

        <TextView
            android:id="@+id/closingTextFirstRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/dialog_close_firstrow"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/closingTextSecondRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/closingTextFirstRow"
            android:layout_centerHorizontal="true"
            android:text="@string/dialog_close_secondrow"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/closingButtonNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/closingTextSecondRow"
            android:layout_alignRight="@+id/closingTextFirstRow"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:src="@mipmap/wrong" />

        <ImageButton
            android:id="@+id/closingButtonYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/closingTextSecondRow"
            android:layout_alignLeft="@+id/closingTextFirstRow"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:src="@mipmap/right" />

    </RelativeLayout>



</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/leaderboard_rank_TextView"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:text="250."
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/leaderboard_name_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@id/leaderboard_score_TextView"
        android:layout_toRightOf="@id/leaderboard_rank_TextView"
        android:text="Player Mario"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="italic|bold"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/leaderboard_score_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:text="1234567890"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="monospace" />
    <View
        android:id="@+id/helpDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/leaderboard_name_TextView"
        android:background="?android:attr/listDivider" />
</RelativeLayout>